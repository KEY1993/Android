<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
 	xmlns:android="http://schemas.android.com/apk/res/android"
 	android:id="@+id/todogroup"
 	android:layout_width="fill_parent"
 	android:layout_height="50dip">
	<TextView
		android:id="@+id/group_time"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:background="#444444"
		android:textColor="#FFFFFF"
		android:layout_alignParentLeft="true"
		android:gravity="center_vertical"
		android:paddingLeft="2dip"
		android:paddingRight="3dip"
		android:textSize="25dip"/>
	<TextView
		android:id="@+id/group_title"
		android:layout_toRightOf="@+id/group_time"
		android:layout_toLeftOf="@+id/group_statusbar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:textColor="#000000"
		android:layout_marginLeft="10dip"
		android:textSize="25dip"/>
	<LinearLayout
		android:id="@+id/group_statusbar"
		android:orientation="vertical"
		android:layout_alignParentRight="true"
 		android:layout_width="wrap_content"
 		android:layout_height="fill_parent"
 		android:layout_marginRight="5dip">
		<RatingBar
			android:id="@+id/group_importance"
			style="?android:attr/ratingBarStyleSmall"
			android:layout_marginTop="5dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/group_state"
			android:layout_gravity="right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20dip"
			android:textColor="#000000"/>
	</LinearLayout>
</RelativeLayout>
